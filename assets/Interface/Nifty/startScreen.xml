<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <controlDefinition name="nouvellePartie" controller="mygame.controls.screen.StartScreenController">
        <image id="#buttonTest" style="#image" filename="Interface/Nifty/images/buttonTest.jpg"childLayout="center"
            width="100%"height="100%"inherit="true" focusable="true">          
        </image>    
    </controlDefinition>
    
    <controlDefinition name="chargerPartie" controller="mygame.controls.screen.StartScreenController">
        <image></image>
    </controlDefinition>
    
    <controlDefinition name="quitter" controller="mygame.controls.screen.StartScreenController">
        <image></image>
    </controlDefinition>
    
    <screen id="start" controller="mygame.controls.screen.StartScreenController">
        <layer id="layer" backgroundColor="#787567" childLayout="absolute">
            <panel id="newGamePanel" height="20%" width="50%" align="center" valign="center" backgroundColor="#010101" childLayout="center" visibleToMouse="true" x="25%"y="12.5%">
                <control name="nouvellePartie" id="newGame" label="Nouvelle Partie" visibleToMouse="true">
                    <interact onClick="newGame()"/>
                </control>
            </panel>
            
            <panel id="loadGamePanel" height="20%" width="50%" align="center" valign="center" backgroundColor="#010101" childLayout="center" visibleToMouse="true" x="25%"y="37.5%">
                <control name="chargerPartie" id="loadGame" label="Charger Partie" visibleToMouse="true">
                    <interact onClick="loadGame()"/>
                </control>
            </panel>
            
            <panel id="quitGame" height="20%" width="50%" align="center" valign="center" backgroundColor="#010101" childLayout="center" visibleToMouse="true" x="25%"y="62.5%">
                <control name="quitter" id="quitGame" label="Quitter" visibleToMouse="true">
                    <interact onClick="quit()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
